<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
<link rel="stylesheet" href="/styles.css">
<title>L'COLOC</title>




<body>
  <div class="container bg-dark">
    <div class="match">
      <img src="/threef.jpg" alt="l'image de l'arriere plan" class="imgctl">
      <div class="centered">l'Coloc</div>
    </div>
    <div class="row">
      <div class="col-md-3 heigh ">
        <div class="bg-dark" style="height:500px;">
            <div style="padding:10px 0px 10px 80px;" class="bg-dark">
              <a href="/users/edit-pdp/<%= user.id %>">
                <img src="/uploads/pdps/<%= user.image%>" alt="photo de profil" class=" imag">
              </a>
            </div>
            <div class="list-group heigh2">
                <a href="/profil" class="list-group-item list-group-item-action bg-dark text-white fas fa-home"><span style="padding-left:19px;">Profil</span></a>
                <a href="/users/edit/<%= user.id %>" class="list-group-item list-group-item-action bg-dark text-white fas fa-user"><span style="padding-left:22px;">Modifier votre profil</span></a>
                <a href="/users/edit_pwd" class="list-group-item list-group-item-action bg-dark text-white fas fa-user-lock"><span style="padding-left:18px;">Changer le mot de passe</span></a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white fas fa-lock"><span style="padding-left:22px;">Paramètres confidentialité</span></a>
                <a href="/mesoffresco" class="list-group-item list-group-item-action bg-danger text-white fas fa-handshake"><span style="padding-left:18px;">Mes Offres</span></a>
                <a href="/offresco/new" class="list-group-item list-group-item-action bg-success text-white fas fa-plus-circle"><span style="padding-left:21px;">Ajouter une offre</span></a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white fas fa-cogs"><span style="padding-left:20px;">Paramètres</span></a>
                
                
              </div> 
          </div>
      </div>
      <div class="col-md-8 padding-0 ">
          <div class="card clr">
              <div class="card-body ">
                  <div class="row">
                      <div class="col-md-12">
                          <h4>Modifier Votre Profil</h4>
                          <hr>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col-md-12">
                          <form action="/users/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                                
                                <div class="form-group row">
                                  <label for="name" class="col-4 col-form-label">Prenom :</label> 
                                  <div class="col-8">
                                    <input id="name" name="name" value="<%= user.name %>" class="form-control-plaintext" type="text">
                                  </div>
                                </div>
                                
                                <div class="form-group row">
                                  <label for="email" class="col-4 col-form-label">Email :</label> 
                                  <div class="col-8">
                                    <input id="email" name="email" value="<%= user.email %>" class="form-control-plaintext" required="required" type="text">
                                  </div>
                                </div>
                                <div class="form-group row">
                                  <label for="datenaissance" class="col-4 col-form-label">Date de naissance :</label> 
                                  <div class="col-8">
                                    <input id="datenaissance" name="datenaissance" value="<%= user.birthday.toLocaleDateString() %>" class="form-control-plaintext" type="text">
                                  </div>
                                </div>
                                <div class="form-group row">
                                  <label for="telnum" class="col-4 col-form-label">Numero de telephone :</label> 
                                  <div class="col-8">
                                      <input id="telnum" name="telnum" value="<%= user.phone %>" class="form-control-plaintext" type="text">
                                  </div>
                                </div>
                                <div class="form-group row">
                                  <div class="col-4 ">
                                    <button name="submit" type="submit" class="btn btn-light buttn">Mettre à jour Mon Profil</button>
                                  </div>
                                </div>
                            </form>
                      </div>
                  </div>
                  
              </div>
          </div>
      </div>
    </div>
  </div>
</body>